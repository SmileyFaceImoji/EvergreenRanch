@model List<Animal>

<h2>Animals For Sale</h2>
<div class="row">
    @foreach (var animal in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (animal.Picture != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(animal.Picture)"
                         class="card-img-top" alt="@animal.AnimalTag" style="height: 200px; object-fit: cover;">
                }
                else
                {
                    <div class="text-center py-5 bg-light">
                        <i class="fas fa-image fa-3x text-muted"></i>
                        <p class="mt-2">No Image</p>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@animal.AnimalTag</h5>
                    <p class="card-text">
                        <strong>Gender:</strong> @animal.Gender<br>
                        <strong>Type:</strong> @animal.AnimalTypeID.GetEnumDisplayName()
                    </p>
                    <a href="@Url.Action("Details", new { id = animal.AnimalID })"
                       class="btn btn-primary">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>