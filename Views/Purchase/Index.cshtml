@model List<Animal>

<div class="container py-5">
    <h2 class="fw-bold text-center text-dark mb-5">Animals In House</h2>

    <div class="row g-4">
        @foreach (var animal in Model)
        {
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card shadow-sm border-0 rounded-3 h-100">
                    <!-- Animal Image -->
                    @if (animal.Picture != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(animal.Picture)"
                             class="card-img-top rounded-top"
                             alt="@animal.AnimalTag"
                             style="height: 220px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="d-flex flex-column align-items-center justify-content-center bg-light"
                             style="height: 220px; border-top-left-radius: .5rem; border-top-right-radius: .5rem;">
                            <i class="fas fa-paw fa-3x text-secondary"></i>
                            <p class="mt-2 text-muted">No Image</p>
                        </div>
                    }

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark fw-semibold mb-2">@animal.AnimalTag</h5>
                        <p class="card-text text-muted small mb-3">
                            <span class="d-block"><strong>Gender:</strong> @animal.Gender</span>
                            <span class="d-block"><strong>Type:</strong> @animal.AnimalTypeID.GetEnumDisplayName()</span>
                        </p>

                        <div class="mt-auto">
                            <a href="@Url.Action("Details", new { id = animal.AnimalID })"
                               class="btn btn-outline-dark w-100 rounded-3 shadow-sm">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #fff;
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    h2 {
        font-size: 1.9rem;
        letter-spacing: 0.3px;
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    .card-title {
        font-size: 1.1rem;
    }

    .btn-outline-dark {
        font-weight: 500;
        transition: all 0.2s ease;
    }

        .btn-outline-dark:hover {
            background-color: #212529;
            color: #fff;
        }

    @@media (max-width: 576px) {
        h2 {
            font-size: 1.5rem;
        }
    }
</style>
