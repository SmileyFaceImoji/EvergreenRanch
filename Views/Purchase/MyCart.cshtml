@model List<Animal>

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-shopping-cart"></i> Your cart is empty
    </div>
    <a href="@Url.Action("ForSale", "Animal")" class="btn btn-primary">
        Browse Available Animals
    </a>
}
else
{
    <div class="row">
        @foreach (var animal in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (animal.Picture != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(animal.Picture)"
                             class="card-img-top" alt="@animal.AnimalTag" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="text-center py-5 bg-light">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@animal.AnimalTag</h5>
                        <p class="card-text">
                            <strong>Type:</strong> @animal.AnimalTypeID.GetEnumDisplayName()<br>
                            <strong>Price:</strong> @animal.MarketPrice.ToString("C")
                        </p>
                    </div>
                    <div class="card-footer">
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="animalId" value="@animal.AnimalID" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Remove
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4 border-top pt-3">
        <div class="d-flex justify-content-between">
            <h4>Total: @Model.Sum(a => a.MarketPrice).ToString("C")</h4>
            <a href="@Url.Action("ConfirmAddress", "Checkout")" class="btn btn-success btn-lg">
                <i class="fas fa-check-circle mr-2"></i> Proceed to Checkout
            </a>
        </div>
    </div>
}