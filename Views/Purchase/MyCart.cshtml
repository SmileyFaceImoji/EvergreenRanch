@model List<Animal>

<div class="container py-5">
    <!-- Page Title -->
    <div class="text-center mb-5">
        <h2 class="fw-bold text-dark display-6">Your Cart</h2>
        <p class="text-muted">Review your selected animals before checkout</p>
    </div>

    @if (!Model.Any())
    {
        <!-- Empty Cart Message -->
        <div class="alert alert-info text-center py-5 rounded-3 shadow-sm">
            <i class="fas fa-shopping-cart fa-2x mb-3 text-primary"></i>
            <h5 class="fw-semibold">Your cart is empty</h5>
            <p class="text-muted">Start browsing and add animals to your cart.</p>
            <a href="@Url.Action("", "Purchase")"
               class="btn btn-outline-primary rounded-pill px-4 mt-3">
                Browse Available Animals
            </a>
        </div>
    }
    else
    {
        <!-- Cart Items -->
        <div class="row g-4">
            @foreach (var animal in Model)
            {
                <div class="col-12 col-sm-6 col-md-4">
                    <div class="card shadow-sm border-0 rounded-3 h-100">
                        @if (animal.Picture != null)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(animal.Picture)"
                                 class="card-img-top rounded-top"
                                 alt="@animal.AnimalTag"
                                 style="height: 220px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="d-flex flex-column align-items-center justify-content-center bg-light"
                                 style="height: 220px; border-top-left-radius: .5rem; border-top-right-radius: .5rem;">
                                <i class="fas fa-image fa-3x text-secondary"></i>
                                <p class="mt-2 text-muted">No Image</p>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title fw-semibold text-dark">@animal.AnimalTag</h5>
                            <p class="card-text text-muted mb-3">
                                <strong>Type:</strong> @animal.AnimalTypeID.GetEnumDisplayName()<br>
                                <strong>Price:</strong>
                                <span class="text-success fw-bold">@animal.MarketPrice.ToString("C")</span>
                            </p>
                        </div>

                        <div class="card-footer bg-white border-0 text-end">
                            <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                <input type="hidden" name="animalId" value="@animal.AnimalID" />
                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                    <i class="fas fa-trash me-1"></i> Remove
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Cart Summary -->
        <div class="mt-5 p-4 border-top rounded-3 shadow-sm bg-white">
            <div class="d-flex flex-column flex-md-row align-items-center justify-content-between">
                <h4 class="fw-bold mb-3 mb-md-0 text-dark">
                    Total: <span class="text-success">@Model.Sum(a => a.MarketPrice).ToString("C")</span>
                </h4>
                <a href="@Url.Action("ConfirmAddress", "Checkout")"
                   class="btn btn-success btn-lg rounded-pill px-4">
                    <i class="fas fa-check-circle me-2"></i> Proceed to Checkout
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
}

<style>
    body {
        background-color: #fff;
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    h2 {
        font-size: 2rem;
        letter-spacing: 0.5px;
    }

    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    .btn {
        font-weight: 500;
    }

    .alert-info {
        background-color: #f8fbff;
        border: 1px solid #d0e7ff;
    }

    @@media (max-width: 576px) {
        h2 {
            font-size: 1.5rem;
        }
    }
</style>
