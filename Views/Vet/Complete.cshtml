@model HealthCheck

@{
    ViewData["Title"] = "Complete Health Check";
}

<h1>Complete Health Check</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Animal:</dt>
            <dd class="col-sm-9">@Model.Animal.AnimalTag</dd>

            <dt class="col-sm-3">Scheduled Date:</dt>
            <dd class="col-sm-9">@Model.ScheduledDate.ToString("f")</dd>

            <dt class="col-sm-3">Assigned Vet:</dt>
            <dd class="col-sm-9">@ViewBag.VetName</dd>
        </dl>

        <form asp-action="Complete">
            <input type="hidden" asp-for="HealthCheckId" />

            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Health Check Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="6"
                          placeholder="Enter examination findings, diagnosis, treatment, and recommendations..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check-circle"></i> Complete Checkup
                </button>
                <a asp-action="Index" class="btn btn-secondary">Back to Appointments</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-header">
                <h5 class="card-title">Animal Information</h5>
            </div>
            <div class="card-body">
                <partial name="_AnimalInfo" model="Model.Animal" />
            </div>
        </div>
    </div>
</div>