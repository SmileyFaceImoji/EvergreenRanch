@model EvergreenRanch.Models.HealthCheck

@{
    ViewData["Title"] = "Perform Health Check";
}

<div class="container mt-4">
    <h2 class="mb-3">Health Check for Animal #@Model.AnimalId</h2>

    <!-- Animal Info Partial -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">Animal Details</h5>
            @await Html.PartialAsync("_AnimalInfo", Model.Animal)
        </div>
    </div>

    <!-- Health Check Form -->
    <form asp-action="Complete" method="post">
        <input type="hidden" asp-for="AnimalId" />
        <input type="hidden" asp-for="VetUserId" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />

        <div class="mb-3">
            <label asp-for="ScheduledDate" class="form-label">Scheduled Date</label>
            <input asp-for="ScheduledDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="ScheduledDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control" rows="4" maxlength="500" placeholder="Enter any observations..."></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Completed" class="form-check-input" type="checkbox" />
            <label asp-for="Completed" class="form-check-label">Mark as Completed</label>
        </div>

        <button type="submit" class="btn btn-success">Save Health Check</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
