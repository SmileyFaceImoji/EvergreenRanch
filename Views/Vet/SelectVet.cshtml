@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Select Vet";
    var selectedDate = ViewBag.SelectedDate as DateTime?;
    var animalId = ViewBag.AnimalId as int?;
}

<h2>Select a Vet</h2>

<p>
    Scheduling for <strong>@selectedDate?.ToString("D")</strong>
    @if (animalId != null)
    {
        <span> (Animal ID: @animalId)</span>
    }
</p>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No vets available.
    </div>
}
else
{
    <form asp-action="SelectVet" method="post">
        <input type="hidden" name="animalId" value="@animalId" />
        <input type="hidden" name="date" value="@selectedDate?.ToFullDate()" />

        <div class="list-group">
            @foreach (var vet in Model)
            {
                <label class="list-group-item">
                    <input type="radio" name="vetId" value="@vet.Id" required />
                    @vet.UserName (@vet.Email)
                </label>
            }
        </div>

        <button type="submit" class="btn btn-success mt-3">
            <i class="fas fa-user-md"></i> Assign Vet
        </button>
    </form>
}
