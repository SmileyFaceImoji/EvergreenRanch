@model IEnumerable<HealthCheck>

@{
    ViewData["Title"] = "Vet Appointments";
}

<div class="container py-4">
    <h2 class="mb-4">Vet Appointments</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No vet appointments scheduled.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Animal</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Animal.AnimalTag</td>
                            <td>@item.ScheduledDate.ToString("f")</td>
                            <td>
                                @if (item.Completed)
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (item.ScheduledDate < DateTime.Now)
                                {
                                    <span class="badge bg-warning text-dark">Missed</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark">Upcoming</span>
                                }
                            </td>
                            <td>
                                @if (!item.Completed)
                                {
                                    <a asp-action="Complete" asp-route-id="@item.HealthCheckId"
                                       class="btn btn-sm btn-primary">
                                        <i class="fas fa-file-medical"></i> Complete Checkup
                                    </a>
                                }
                               
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
