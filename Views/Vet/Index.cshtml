@model IEnumerable<HealthCheck>

@{
    ViewData["Title"] = "Vet Appointments";
}

<div class="container py-4">
    <h2 class="mb-4 text-center">🐄 Vet Appointments</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm text-center py-4">
            <i class="fas fa-calendar-times fa-2x d-block mb-2"></i>
            <strong>No vet appointments scheduled</strong>
            <p class="mb-0">You don’t have any upcoming or completed checkups yet.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Animal</th>
                                <th>Date & Time</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var rowClass = !item.Completed && item.ScheduledDate < DateTime.Now ? "table-danger" : "";

                                <tr class="@rowClass">
                                    <td class="fw-semibold">@item.Animal.AnimalTag</td>
                                    <td>@item.ScheduledDate.ToString("f")</td>
                                    <td>
                                        @if (item.Completed)
                                        {
                                            <span class="badge bg-success rounded-pill">
                                                <i class="fas fa-check-circle me-1"></i> Completed
                                            </span>
                                        }
                                        else if (item.ScheduledDate < DateTime.Now)
                                        {
                                            <span class="badge bg-warning text-dark rounded-pill">
                                                <i class="fas fa-exclamation-circle me-1"></i> Missed
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark rounded-pill">
                                                <i class="fas fa-clock me-1"></i> Upcoming
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (!item.Completed)
                                        {
                                            <a asp-action="Complete" asp-route-id="@item.HealthCheckId"
                                               class="btn btn-sm btn-primary rounded-pill"
                                               title="Mark this checkup as completed">
                                                <i class="fas fa-file-medical"></i> Complete
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
