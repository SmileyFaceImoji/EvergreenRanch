@model IEnumerable<Order>
@using EvergreenRanch.Models

@{
    ViewData["Title"] = "Delivery Management";
}

<h2 class="mb-4">Delivery Management</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Order Date</th>
            <th>Client Secrkey</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.FullName</td>
                <td>
                    <span class="badge
                        @(order.OrderStatus == Order.StatusOrder.Delivered ? "bg-success" :
                          order.OrderStatus == Order.StatusOrder.HeldUp ? "bg-danger" :
                          order.OrderStatus == Order.StatusOrder.Recieved ? "bg-secondary" :
                          order.OrderStatus == Order.StatusOrder.Prepping ? "bg-info" : "bg-warning")">
                        @order.OrderStatus
                    </span>
                </td>
                <td>@order.OrderDate.ToString("d")</td>
                <td>@order.SecretKey</td>
                <td>
                    <form method="post" asp-controller="Drivers" asp-action="UpdateStatus" class="d-flex gap-2">
                        <input type="hidden" name="orderId" value="@order.OrderId" />
                        <select name="status" class="form-select form-select-sm" style="width: 140px;">
                            @foreach (Order.StatusOrder status in Enum.GetValues(typeof(Order.StatusOrder)))
                            {
                                <option value="@status" selected="@(status == order.OrderStatus)">@status</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">
                            Update
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-truck me-2"></i> No orders to manage at this time
    </div>
}


    <style>
        .badge {
            padding: 0.5em 0.75em;
            font-size: 0.9em;
            font-weight: 600;
        }

        .form-select-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
