@model IEnumerable<EvergreenRanch.Models.WorkerLeave>

<h2>My Leave Applications</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<a asp-action="Apply" class="btn btn-primary mb-3">Apply for Leave</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Start</th>
            <th>End</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Applied On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.Reason</td>
                <td>@leave.Status</td>
                <td>@leave.AppliedOn.ToLocalTime().ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
