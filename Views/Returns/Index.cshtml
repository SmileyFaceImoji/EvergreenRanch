@model IEnumerable<ReturnRequests>
@{
    ViewData["Title"] = "My Return Requests";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Request
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm text-center py-4">
            <i class="fas fa-info-circle fa-2x d-block mb-2"></i>
            <strong>No Return Requests</strong>
            <p class="mb-0">You haven’t made any return requests yet.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Return ID</th>
                                <th>Animal</th>
                                <th>Order #</th>
                                <th>Reason</th>
                                <th>Request Date</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">#@request.ReturnId</td>
                                    <td>@request.Animal.AnimalTag</td>
                                    <td>@request.OrderId</td>
                                    <td>@request.Reason</td>
                                    <td>@request.RequestDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge rounded-pill
                                                    @(request.Status == ReturnRequests.ReturnStatus.Refunded ? "bg-success" :
                                                                                            request.Status == ReturnRequests.ReturnStatus.Rejected ? "bg-danger" :
                                                                                            request.Status == ReturnRequests.ReturnStatus.Approved ? "bg-primary" : "bg-warning text-dark")">
                                    @request.Status
                                </span>
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("Details", "Returns", new { id = request.ReturnId })"
                                   class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
