@model IEnumerable<EvergreenRanch.Models.WorkerTask>

<h2>All Worker Tasks</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Assign New Task</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Assigned To</th>
            <th>Status</th>
            <th>Assigned On</th>
            <th>Completed On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.AssignedToUser?.Email</td>
                <td>
                    @if (task.IsCompleted)
                    {
                        <span class="text-success">Completed</span>
                    }
                    else
                    {
                        <span class="text-warning">Pending</span>
                    }
                </td>
                <td>@task.AssignedOn.ToLocalTime().ToDate()</td>
                <td>@(task.CompletedOn?.ToLocalTime().ToDate() ?? "-")</td>
            </tr>
        }
    </tbody>
</table>
