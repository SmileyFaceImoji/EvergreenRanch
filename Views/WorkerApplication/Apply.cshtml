<!-- File: Views/WorkerApplication/Apply.cshtml -->
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model EvergreenRanch.Models.WorkerApplication
    ViewData["Title"] = "Apply to be Worker";
}
<h2>Apply to be Worker</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

@if (Model.Id != 0)
{
    <p>Application status: <strong>@Model.Status</strong> (applied on @Model.AppliedOn.ToLocalTime())</p>
    <form asp-action="ApplyPost" method="post">
        <textarea name="notes" class="form-control" placeholder="Notes">@Model.Notes</textarea>
        <button class="btn btn-primary mt-2">Re-submit</button>
    </form>
}
else
{
    <form asp-action="ApplyPost" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label>Why do you want to work here?</label>
            <textarea name="notes" class="form-control"></textarea>
        </div>

        <div class="form-group mb-3">
            <label>ID Document (PDF or Image)</label>
            <input type="file" name="IdDocument" class="form-control" accept=".pdf,.jpg,.jpeg,.png" required />
        </div>

        <div class="form-group mb-3">
            <label>Curriculum Vitae (CV)</label>
            <input type="file" name="CvFile" class="form-control" accept=".pdf,.doc,.docx" required />
        </div>

        <div class="form-group mb-3">
            <label>Cover Letter</label>
            <input type="file" name="CoverLetterFile" class="form-control" accept=".pdf,.doc,.docx" />
        </div>

        <button class="btn btn-primary mt-2">Apply</button>
    </form>

}
