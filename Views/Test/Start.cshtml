@model EvergreenRanch.Controllers.TestStartViewModel
@{
    ViewData["Title"] = "Final Test";
}

<h2>Final Test</h2>

<form asp-action="Submit" method="post">
    <input type="hidden" name="courseId" value="@Model.CourseId" />

    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        var q = Model.Questions[i];
        var choices = q.Choices;

        <div class="mb-3 border p-3 rounded">
            <p><strong>@(i + 1). @q.QuestionText</strong></p>

            @for (int j = 0; j < choices.Length; j++)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="radio"
                           name="answers[@q.Id]"
                           value="@j"
                           id="q@q.Id_@j" />
                    <label class="form-check-label" for="q@q.Id_@j">@choices[j]</label>
                </div>
            }
        </div>
    }

    <button class="btn btn-primary mt-3">Submit Test</button>
</form>
