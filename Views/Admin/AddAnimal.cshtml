@{
    ViewData["Title"] = "Add Animal";
    var typeOptions = ViewBag.AnimalTypes as List<string>;
    var healthOptions = ViewBag.AnimalHealthStatuses as List<string>;
}

<h2>Add Animal</h2>

@using (Html.BeginForm("AddAnimal", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <label>Animal Tag</label>
        <input name="AnimalTag" class="form-control" required />
    </div>

    <div>
        <label>Animal Type</label>
        <select name="AnimalTypeID" class="form-control" required>
            <option value="">-- Select --</option>
            @foreach (var type in typeOptions)
            {
                <option value="@type">@type</option>
            }
        </select>
    </div>

    <div>
        <label>Gender</label>
        <select name="Gender" class="form-control" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>

    <div>
        <label>Weight (Kg)</label>
        <input name="WeightKg" type="number" step="0.01" class="form-control" required />
    </div>

    <div>
        <label>Age (months)</label>
        <input name="AgeInMonths" type="number" class="form-control" required />
    </div>

    <div>
        <label>Health Status</label>
        <select name="HealthStatus" class="form-control" required>
            <option value="">-- Select --</option>
            @foreach (var status in healthOptions)
            {
                <option value="@status">@status</option>
            }
        </select>
    </div>

    <div>
        <label>Is Listed for Sale</label>
        <input name="IsListedForSale" type="checkbox" />
    </div>

    <div>
        <label>Picture</label>
        <input name="PictureFile" type="file" class="form-control" />
    </div>

    <div>
        <label>Market Price</label>
        <input name="MarketPrice" type="number" step="0.01" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-2">Add Animal</button>
}
