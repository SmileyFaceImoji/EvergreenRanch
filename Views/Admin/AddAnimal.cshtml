@model Animal

<h2>Add New Animal</h2>
<form asp-action="AddAnimal" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Animal Tag*</label>
        <input type="text" name="AnimalTag" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Animal Type*</label>
        <select name="AnimalTypeID" class="form-control" required>
            <option value="">-- Select --</option>
            @foreach (EvergreenRanch.Models.Common.TypeAnimal type in ViewBag.AnimalTypes)
            {
                <option value="@type">@type.GetEnumDisplayName()</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Gender*</label>
        <select name="Gender" class="form-control" required>
            <option value="">-- Select --</option>
            @foreach (string gender in ViewBag.Genders)
            {
                <option value="@gender">@gender</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Weight (kg)*</label>
        <input type="number" step="0.1" name="WeightKg" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Age (months)*</label>
        <input type="number" name="AgeInMonths" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Health Status*</label>
        <select name="HealthStatus" class="form-control" required>
            <option value="">-- Select --</option>
            @foreach (EvergreenRanch.Models.Common.StatusHealth status in ViewBag.HealthStatuses)
            {
                <option value="@status">@status.GetEnumDisplayName()</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Current Status*</label>
        <select name="CurrentStatus" class="form-control" required>
            <option value="">-- Select --</option>
            @foreach (EvergreenRanch.Models.Common.StatusAnimal status in ViewBag.CurrentStatuses)
            {
                <option value="@status">@status.GetEnumDisplayName()</option>
            }
        </select>
    </div>

    <div class="form-group form-check">
        <input type="checkbox" name="IsListedForSale" value="true" class="form-check-input" />
        <label class="form-check-label">Listed for Sale</label>
    </div>

    <div class="form-group">
        <label>Market Price ($)</label>
        <input type="number" step="0.01" name="MarketPrice" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Animal Picture</label>
        <input type="file" name="Picture" class="form-control-file" />
    </div>

    <button type="submit" class="btn btn-primary">Save Animal</button>
</form>