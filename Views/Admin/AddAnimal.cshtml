@model Animal

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <h2 class="fw-bold text-dark mb-4 text-center">Add New Animal</h2>

                    <form asp-action="AddAnimal" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Animal Tag -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Animal Tag*</label>
                            <input type="text" name="AnimalTag" class="form-control rounded-3" placeholder="Enter animal tag" required />
                        </div>

                        <!-- Animal Type -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Animal Type*</label>
                            <select name="AnimalTypeID" class="form-select rounded-3" required>
                                <option value="">-- Select --</option>
                                @foreach (EvergreenRanch.Models.Common.TypeAnimal type in ViewBag.AnimalTypes)
                                {
                                    <option value="@type">@type.GetEnumDisplayName()</option>
                                }
                            </select>
                        </div>

                        <!-- Gender -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Gender*</label>
                            <select name="Gender" class="form-select rounded-3" required>
                                <option value="">-- Select --</option>
                                @foreach (string gender in ViewBag.Genders)
                                {
                                    <option value="@gender">@gender</option>
                                }
                            </select>
                        </div>

                        <!-- Weight -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Weight (kg)*</label>
                            <input type="number" step="0.1" name="WeightKg" class="form-control rounded-3" placeholder="Enter weight" required />
                        </div>

                        <!-- Age -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Age (months)*</label>
                            <input type="number" name="AgeInMonths" class="form-control rounded-3" placeholder="Enter age" required />
                        </div>

                        <!-- Health Status -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Health Status*</label>
                            <select name="HealthStatus" class="form-select rounded-3" required>
                                <option value="">-- Select --</option>
                                @foreach (EvergreenRanch.Models.Common.StatusHealth status in ViewBag.HealthStatuses)
                                {
                                    <option value="@status">@status.GetEnumDisplayName()</option>
                                }
                            </select>
                        </div>

                        <!-- Current Status -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Current Status*</label>
                            <select name="CurrentStatus" class="form-select rounded-3" required>
                                <option value="">-- Select --</option>
                                @foreach (EvergreenRanch.Models.Common.StatusAnimal status in ViewBag.CurrentStatuses)
                                {
                                    <option value="@status">@status.GetEnumDisplayName()</option>
                                }
                            </select>
                        </div>

                        <!-- Market Price -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Market Price ($)</label>
                            <input type="number" step="0.01" name="MarketPrice" class="form-control rounded-3" placeholder="Enter market price" required />
                        </div>

                        <!-- Animal Picture -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Animal Picture</label>
                            <input type="file" name="Picture" class="form-control" />
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-dark w-100 py-2 rounded-3 shadow-sm">
                            Save Animal
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
