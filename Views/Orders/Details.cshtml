@model EvergreenRanch.Models.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <h2>Order #@Model.Order.OrderId</h2>
    <p><strong>Status:</strong> @Model.Order.OrderStatus</p>
    <p><strong>Total:</strong> $@Model.Order.TotalAmount.ToString("0.00")</p>
    <p><strong>Date:</strong> @Model.Order.OrderDate.ToString("yyyy-MM-dd")</p>

    <h4 class="mt-3">Shipping Information</h4>
    <ul class="list-group mb-3">
        <li class="list-group-item"><strong>Name:</strong> @Model.Order.FullName</li>
        <li class="list-group-item"><strong>Address:</strong> @Model.Order.Address, @Model.Order.City, @Model.Order.Province</li>
        <li class="list-group-item"><strong>Postal Code:</strong> @Model.Order.PostalCode</li>
    </ul>

    <h4 class="mt-3">Order Items</h4>
    <table class="table table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Animal ID</th>
                <th>Unit Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order.OrderItems)
            {
                <tr>
                    <td>@item.AnimalID</td>
                    <td>$@item.UnitPrice.ToString("0.00")</td>
                </tr>
            }
        </tbody>
    </table>

    @if (User.IsInRole("Admin"))
    {
        if (!string.IsNullOrEmpty(Model.AssignedDriver))
        {
            <div class="alert alert-info">
                Driver <strong>@Model.AssignedDriver</strong> has been assigned to this order.
            </div>
        }
        else
        {
            <form asp-action="AssignDriver" method="post" class="mt-3">
                <input type="hidden" name="orderId" value="@Model.Order.OrderId" />
                <div class="input-group">
                    <select name="driverUserId" class="form-select" asp-items="Model.DriverList"></select>
                    <button type="submit" class="btn btn-primary">Assign Driver</button>
                </div>
            </form>
        }
    }



    <div class="mt-4">
        @if (!User.IsInRole("Admin") && !User.IsInRole("Driver"))
        {
            @if (!Model.Order.RecievedByCustomer)
            {
                <h5>Confirm Delivery</h5>
                <form asp-action="DidYouGetIt" method="post" class="row g-2">
                    <input type="hidden" name="OrderId" value="@Model.Order.OrderId" />
                    <div class="col-auto">
                        <input type="text" name="SecretKey" class="form-control" placeholder="Enter Secret Key" required />
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-success">Confirm</button>
                    </div>
                </form>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-2">@TempData["ErrorMessage"]</div>
                }
            }
            else
            {
                <div class="alert alert-success">
                    Order confirmed on @Model.Order.RecievedAt?.ToString("dddd dd-MMM-yyyy")
                </div>
            }
        }
        <h4 class="mt-3">Order Items</h4>
<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Animal ID</th>
            <th>Unit Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order.OrderItems)
        {
            <tr>
                <td>@item.AnimalID</td>
                <td>$@item.UnitPrice.ToString("0.00")</td>
                <td>
                    @if (Model.Order.RecievedByCustomer)  
                    {
                        <a asp-controller="Returns" 
                           asp-action="Create" 
                           asp-route-orderId="@Model.Order.OrderId" 
                           asp-route-animalId="@item.AnimalID" 
                           class="btn btn-sm btn-danger">
                            Request Return
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

    </div>
</div>
