@model IEnumerable<EvergreenRanch.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark mb-0">My Orders</h2>
            </div>

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Order #</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Confirmed</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold">@order.OrderId</td>
                                        <td>
                                            <span class="badge rounded-3 bg-secondary">
                                                @order.OrderStatus
                                            </span>
                                        </td>
                                        <td class="fw-bold text-dark">
                                            R @order.TotalAmount.ToString("N2")
                                        </td>
                                        <td class="text-muted">
                                            @order.OrderDate.ToString("dd MMM yyyy")
                                        </td>
                                        <td>
                                            @if (order.RecievedByCustomer)
                                            {
                                                <span class="badge bg-dark rounded-3">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark rounded-3">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@order.OrderId"
                                               class="btn btn-sm btn-outline-dark rounded-3 px-3 shadow-sm">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
