@model IEnumerable<EvergreenRanch.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">My Orders</h2>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-0">
            <table class="table table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Order #</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Date</th>
                        <th>Confirmed</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td><span class="badge bg-info text-dark">@order.OrderStatus</span></td>
                            <td class="fw-semibold text-success">$@order.TotalAmount.ToString("0.00")</td>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (order.RecievedByCustomer)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.OrderId"
                                   class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
